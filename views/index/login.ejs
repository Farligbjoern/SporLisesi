<%- include("../parts/header.ejs") %>
    <% if(error !=="yok" ) { %>
        <script>
            showAlert("<%= error %>");
        </script>
        <% } %>

            <div class="login-container" style="margin-top: -20px;">
                <div class="login-card">
                    <div class="login-header">
                        <h1>Yönetim Paneli Girişi</h1>
                        <p>Lütfen bilgilerinizle giriş yapın</p>
                    </div>
                    <form class="login-form" action="/login" method="POST">
                        <div class="form-group">
                            <label for="tc">
                                <i class="fas fa-user"></i> TC Kimlik Numarası
                            </label>
                            <input type="text" id="tc" name="tc" placeholder="Tc kimlik numaranızı giriniz" required
                                pattern="[0-9]{11}" title="TC Kimlik Numarası 11 haneli olmalıdır">
                        </div>
                        <div class="form-group">
                            <label for="password">
                                <i class="fas fa-lock"></i> Şifre
                            </label>
                            <input type="password" id="password" name="password" placeholder="Şifrenizi giriniz"
                                required>
                        </div>
                        <button type="submit" class="login-button">
                            <i class="fas fa-sign-in-alt"></i> Giriş Yap
                        </button>
                    </form>
                    <div class="login-footer">
                        <p>Şifrenizi unuttuysanız yöneticinizle iletişime geçebilirsiniz.</p>
                    </div>
                </div>
            </div>

            <%- include("../parts/footer.ejs") %>